<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:twittersdk="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.twitterist.app.activity.TwitterActivity"
    android:background="#8562d8ff">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:paddingTop="50dp"
        android:layout_alignParentTop="true">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Was gibt&apos;s Neues?"
        android:id="@+id/editText_tweet_String"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:background="#ffffff"
        android:layout_alignTop="@+id/btn_send_tweet_twitter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btn_send_tweet_twitter"
        android:layout_toStartOf="@+id/btn_send_tweet_twitter"
        android:textStyle="italic" />

    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Twittern"
        android:id="@+id/btn_send_tweet_twitter"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#88c9ff"
        android:layout_marginLeft="5dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tweets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:orientation="vertical"
        android:layout_below="@+id/relativeLayout">

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="#e1e8ed"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="false"/>



    </LinearLayout>


</RelativeLayout>
