<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#8562d8ff"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="45dp"
    tools:context="org.twitterist.app.activity.HomeActivity">


    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/linearLayout"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Twitterist"
            android:textColor="#44a62e"
            android:gravity="center"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/subTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Machine Learning powered analysis of your Tweets"
            android:textColor="#4cc730"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_below="@+id/title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp" />

        <WebView
            android:id="@+id/introText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/view_rounded"
            android:layout_below="@+id/subTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <!-- Twitter Button-->
        <!-- Analysis Button-->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/linearLayout2"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButton_AboutUs_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@mipmap/ic_search_icon"
            android:gravity="center"
            android:layout_above="@+id/imageButton_Analysis_Home"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="40dp" />

        <ImageButton
            android:id="@+id/imageButton_Analysis_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#00000000"
            android:src="@mipmap/ic_serach_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/imageButton_Twitter_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@mipmap/ic_twitter_icon_blue"
            android:layout_below="@+id/imageButton_Analysis_Home"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp" />
    </RelativeLayout>


</RelativeLayout><!-- AboutUs Search Button-->
