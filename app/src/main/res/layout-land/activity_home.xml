<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_customer"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="45dp"
    tools:context="org.twitterist.app.activity.HomeActivity">


    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/linearLayout"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Twitterist"
            android:textColor="#44a62e"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textView_subTitle_Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/title"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Machine Learning powered analysis of your Tweets"
            android:textColor="#4cc730"
            android:textSize="18sp" />

        <WebView
            android:id="@+id/WebView_IntroText_Home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_subTitle_Home"
            android:background="@drawable/view_rounded" />


        <!-- Twitter Button-->
        <!-- Analysis Button-->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/linearLayout2"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButton_AboutUs_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageButton_Analysis_Home"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="40dp"
            android:background="#00000000"
            android:gravity="center"
            android:src="@mipmap/ic_search_icon" />

        <ImageButton
            android:id="@+id/imageButton_Analysis_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:gravity="center"
            android:src="@mipmap/ic_serach_icon" />

        <ImageButton
            android:id="@+id/imageButton_Twitter_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageButton_Analysis_Home"
            android:layout_marginTop="40dp"
            android:background="#00000000"
            android:src="@mipmap/ic_twitter_icon_blue" />
    </RelativeLayout>


</RelativeLayout><!-- AboutUs Search Button-->
