<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8562d8ff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="50dp"
    tools:context="org.twitterist.app.login.LoginActivity">


    <RelativeLayout
        android:id="@+id/Profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/imageView_user_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal|top"
            android:background="@drawable/circle_transparent_userimg"
            android:src="@mipmap/ic_default_user_icon"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/txtViewProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_user_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/relativeTwitter"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:id="@+id/imageButton_twitter_login_Zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@mipmap/ic_twitter_icon_blue"
                android:layout_above="@+id/textViewTwitter"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/textViewTwitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageButton_twitter_login_Zone"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/imageButton_twitter_login_Zone"
                android:text="Twitter"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relativeAnalysis"
                android:layout_above="@+id/relativeTwitter"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="39dp"
                android:layout_marginBottom="10dp">

                <ImageButton
                    android:id="@+id/imageButton_Analysis_Icon_Login_Zone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_serach_icon" />

                <TextView
                    android:id="@+id/textViewAnalysis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageButton_Analysis_Icon_Login_Zone"
                    android:text="Analysis"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>


        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/relativeAboutUs"
            android:layout_above="@+id/relativeTwitter"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="30dp">

            <ImageButton
                android:id="@+id/imageButton_AboutUS_Icon_Login_Zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@mipmap/ic_search_icon"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/textViewAboutUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton_AboutUS_Icon_Login_Zone"
                android:layout_centerHorizontal="true"
                android:text="About Us"/>


        </RelativeLayout>




    </RelativeLayout>


    <FrameLayout
        android:id="@+id/frameLayout_Twitter_Login_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp">

        <com.twitter.sdk.android.core.identity.TwitterLoginButton
            android:id="@+id/twitter_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />


    </FrameLayout>


</RelativeLayout>