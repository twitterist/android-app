<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8562d8ff"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="45dp"
    tools:context="org.twitterist.app.activity.HomeActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Twitterist"
        android:textSize="50sp"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:textColor="#44a62e" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Machine Learning powered analysis of your Tweets"
        android:id="@+id/subTitle"
        android:layout_below="@+id/title"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#4cc730"
        android:layout_centerHorizontal="true" />

    <WebView
        android:id="@+id/introText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/subTitle"
        android:layout_above="@+id/imageButton_Twitter_Home"
        android:background="@drawable/view_rounded" />


    <!-- Twitter Button-->
    <ImageButton
        android:id="@+id/imageButton_Twitter_Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:src="@mipmap/ic_twitter_icon_blue"
        android:layout_alignBottom="@+id/imageButton_AboutUs_Home"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:paddingTop="8dp" />
    <!-- Analysis Button-->
    <ImageButton
        android:id="@+id/imageButton_Analysis_Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:src="@mipmap/ic_serach_icon"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="false"
         />

    <ImageButton
        android:id="@+id/imageButton_AboutUs_Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:src="@mipmap/ic_search_icon"
        android:layout_alignBottom="@+id/imageButton_Analysis_Home"
        android:layout_alignRight="@+id/introText"
        android:layout_alignEnd="@+id/introText"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp"/>

    <!-- AboutUs Search Button-->

</RelativeLayout>