<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_customer"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="45dp"
    tools:context="org.twitterist.app.activity.HomeActivity">


    <TextView
        android:id="@+id/textView_subTitle_Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Machine Learning powered analysis of your Tweets"
        android:textColor="#3e3c3c"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <WebView
        android:id="@+id/WebView_IntroText_Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_subTitle_Home"
        android:background="@drawable/view_rounded"
        android:layout_above="@+id/relativeLayout_Analysis_Home"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="20dp" />


    <!-- Analysis Button-->


    <RelativeLayout
        android:id="@+id/relativeLayout_Analysis_Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:id="@+id/imageButton_Analysis_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/backgroud_imagebutton"
            android:src="@mipmap/ic_serach_icon" />

        <TextView
            android:id="@+id/textView_Analysis_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton_Analysis_Home"
            android:layout_centerHorizontal="true"
            android:text="Analysis" />

    </RelativeLayout>

    <!-- Twitter Button-->
    <RelativeLayout
        android:id="@+id/relativeLayout_Twitter_Home"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:id="@+id/imageButton_Twitter_Home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/textView_Twitter_Home"
            android:background="#00000000"
            android:src="@mipmap/ic_twitter_icon_blue"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView_Twitter_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignLeft="@+id/imageButton_Twitter_Home"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageButton_Twitter_Home"
            android:text="Twitter"
            android:layout_alignRight="@+id/imageButton_Twitter_Home"
            android:layout_alignEnd="@+id/imageButton_Twitter_Home" />

    </RelativeLayout>

    <!-- AboutUs Button-->

    <RelativeLayout
        android:id="@+id/relativeLayout_AboutUs_Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/relativeLayout_Twitter_Home"
        android:layout_alignRight="@+id/WebView_IntroText_Home"
        android:layout_alignEnd="@+id/WebView_IntroText_Home"
        android:layout_marginRight="25dp">

        <ImageButton
            android:id="@+id/imageButton_AboutUs_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:src="@mipmap/ic_search_icon" />

        <TextView
            android:id="@+id/textView_AboutUs_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton_AboutUs_Home"
            android:layout_centerHorizontal="true"
            android:text="About Us" />

    </RelativeLayout>

</RelativeLayout>