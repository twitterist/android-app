<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="45dp"
    tools:context="org.twitterist.app.home.HomeActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Twitterist"
        android:textSize="50sp"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:textColor="#44a62e" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Machine Learning powered analysis of             your Tweets"
        android:id="@+id/subTitle"
        android:layout_below="@+id/title"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#4cc730"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/introText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton_Twitter_Icon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:text="Still working on it
...but we are building something totally awsome for you. Revisit us at any time or in spring 2016 to get more info."
        android:layout_below="@+id/subTitle" />


    <!-- Twetter Button-->
    <ImageButton
        android:id="@+id/imageButton_Twitter_Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:src="@mipmap/ic_twitter_icon_blue"
        android:layout_alignTop="@+id/imageButton_AboutUs_Search_Icon"
        android:layout_toLeftOf="@+id/imageButton_AboutUs_Search_Icon"
        android:layout_toStartOf="@+id/imageButton_AboutUs_Search_Icon"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp" />
    <!-- Analysis Button-->
    <ImageButton
        android:id="@+id/imageButton_Analysis_Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:src="@mipmap/ic_serach_icon"
        android:layout_alignTop="@+id/imageButton_AboutUs_Search_Icon"
        android:layout_toRightOf="@+id/imageButton_AboutUs_Search_Icon"
        android:layout_toEndOf="@+id/imageButton_AboutUs_Search_Icon"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp" />
    <!-- AboutUs Search Button-->
    <ImageButton
        android:id="@+id/imageButton_AboutUs_Search_Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:src="@mipmap/ic_search_icon"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>